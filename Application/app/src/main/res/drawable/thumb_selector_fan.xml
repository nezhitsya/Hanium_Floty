<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorLightDarkBlue" />
                    <corners android:radius="100dp" />
                    <size android:width="24dp" android:height="24dp" />
                    <stroke android:width="10dp" android:color="@color/colorLightDarkBlue" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_fan"
                android:bottom="2dp"
                android:top="2dp"
                android:left="2dp"
                android:right="2dp" />
        </layer-list>
    </item>

</selector>