<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FanSettingFragment">

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:thumb="@drawable/thumb_selector_fan"
        app:track="@drawable/track_selector_fan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/circle"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/fan" />

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:src="@drawable/ic_fan" />

    <TextView
        android:id="@+id/onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloud"
        android:layout_centerHorizontal="true"
        android:text="ON"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="30 %"
        android:textColor="@color/colorBlack"
        android:textSize="25dp" />

    <SeekBar
        android:id="@+id/range"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progressDrawable="@drawable/seekbar_bar_fan"
        android:thumb="@drawable/seekbar_thumb_fan" />

</RelativeLayout>