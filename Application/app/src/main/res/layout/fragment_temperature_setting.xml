<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TemperatureSettingFragment">

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:thumb="@drawable/thumb_selector_temp"
        app:track="@drawable/track_selector_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/temp_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:src="@drawable/temp" />

    <TextView
        android:id="@+id/onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:textSize="20dp"
        android:layout_below="@+id/cloud"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" â„ƒ"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/circle"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/range"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/seekbar_thumb_temp"
        android:progressDrawable="@drawable/seekbar_bar_temp"
        android:progress="-20"
        android:max="40"
        android:min="-20"
        android:layout_below="@+id/percent"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>